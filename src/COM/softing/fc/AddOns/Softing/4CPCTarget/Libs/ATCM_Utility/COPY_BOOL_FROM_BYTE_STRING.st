(* returns a value copied from the byte string BSTR at the position POS *)

FUNCTION COPY_BOOL_FROM_BYTE_STRING : BOOL
VAR_IN_OUT
    POS : DINT;
    BSTR : BYTE_STRING;
END_VAR

    COPY_BOOL_FROM_BYTE_STRING := 
        LWORD_TO_BOOL(COPY_NUMERIC_FROM_BYTE_STRING(1,POS,BSTR));

END_FUNCTION
