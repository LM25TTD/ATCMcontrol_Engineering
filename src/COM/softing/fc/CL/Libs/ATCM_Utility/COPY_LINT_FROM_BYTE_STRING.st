(* returns a value copied from the byte string BSTR at the position POS *)

FUNCTION COPY_LINT_FROM_BYTE_STRING : LINT
VAR_IN_OUT
    POS : DINT;
    BSTR : BYTE_STRING;
END_VAR
    
    COPY_LINT_FROM_BYTE_STRING := 
        LWORD_TO_LINT(COPY_NUMERIC_FROM_BYTE_STRING(8,POS,BSTR));

END_FUNCTION
